<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:bottom="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#B0BEC5" /> <!-- Shadow color -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Main TextView background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Main background color -->
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#B0BEC5" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
